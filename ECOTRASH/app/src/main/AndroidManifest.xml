<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- WAJIB: Izin akses internet -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECOTRASH"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- SplashActivity harus explicit exported=true -->
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/Theme.ECOTRASH.Splash"
            android:exported="true"
            tools:replace="android:exported">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Onboarding screens -->
        <activity
            android:name=".onboarding.OnboardingActivity"
            android:exported="false"
            android:label="Onboarding"/>

        <!--  Auth screens -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="Auth"/>
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Auth"/>

        <!-- MainActivity tanpa intent-filter -->
        <activity
            android:name=".main.MainActivity"
            android:exported="false"
            android:label="@string/app_name" />

        <!-- Tambahkan activity lain di siniâ€¦ -->
    </application>

</manifest>