<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Icon centang -->
    <ImageView
        android:src="@drawable/ic_check"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="16dp"
        app:tint="@color/dark_green"
        android:contentDescription="@string/check_icon_desc" />

    <TextView
        android:id="@+id/judulVoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Voucher Kebutuhan Pokok"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tukar Poin Menjadi Voucher Berhasil"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnKembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:background="@drawable/bg_btn_rounded_green"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />
</LinearLayout>
