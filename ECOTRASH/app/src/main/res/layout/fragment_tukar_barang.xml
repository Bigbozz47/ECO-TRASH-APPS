<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F9F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header Hijau -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/dark_green"
            android:padding="12dp">

            <!-- Nama & Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delano Yusuf Habibie"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/userStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â— Nasabah"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Notifikasi -->
            <RelativeLayout
                android:id="@+id/notificationContainer"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_notification"
                    android:background="@drawable/circle_background"
                    android:padding="6dp"
                    android:contentDescription="Notifikasi" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_red_dot" />
            </RelativeLayout>

            <!-- Foto Profil -->
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_toStartOf="@id/notificationContainer"
                android:layout_marginEnd="12dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_background"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:contentDescription="Profil" />
        </RelativeLayout>

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opsi Penukaran"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:textColor="#333333" />

        <!-- Kategori Tombol -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:weightSum="2"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <Button
                android:id="@+id/btnKebutuhanPokok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kebutuhan\nPokok"
                android:textAlignment="center"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:paddingVertical="12dp"
                android:background="@drawable/bg_btn_rounded_green" />

            <Button
                android:id="@+id/btnKebutuhanRT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kebutuhan\nRumah Tangga"
                android:textAlignment="center"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:paddingVertical="12dp"
                android:background="@drawable/bg_btn_rounded_green" />
        </LinearLayout>

        <Button
            android:id="@+id/btnKebutuhanATK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kebutuhan\nATK"
            android:textAlignment="center"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_btn_rounded_green" />

        <!-- Tombol Detail Informasi -->
        <Button
            android:id="@+id/btnDetailInformasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Informasi"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_rounded_teal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- Tombol Kembali -->
        <Button
            android:id="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_btn_rounded_yellow"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</ScrollView>
